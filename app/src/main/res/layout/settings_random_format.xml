<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/settings_random_format_radio_group_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/settings_random_format_radio_group_option_1_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="option0"
            android:text="0.9"
            android:textSize="16sp"
            android:theme="@style/AppTheme"
            android:translationX="16dp" />

        <RadioButton
            android:id="@+id/settings_random_format_radio_group_option_2_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="option1"
            android:text="0.91"
            android:textSize="16sp"
            android:theme="@style/AppTheme"
            android:translationX="16dp" />

        <RadioButton
            android:id="@+id/settings_random_format_radio_group_option_3_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="option2"
            android:text="0.917"
            android:textSize="16sp"
            android:theme="@style/AppTheme"
            android:translationX="16dp" />

        <RadioButton
            android:id="@+id/settings_random_format_radio_group_option_4_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="option3"
            android:text="0.9178"
            android:textSize="16sp"
            android:theme="@style/AppTheme"
            android:translationX="16dp" />

        <RadioButton
            android:id="@+id/settings_random_format_radio_group_option_5_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="option4"
            android:text="0.91788"
            android:textSize="16sp"
            android:theme="@style/AppTheme"
            android:translationX="16dp" />

        <RadioButton
            android:id="@+id/settings_random_format_radio_group_option_6_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="option4"
            android:text="0.91788"
            android:textSize="16sp"
            android:theme="@style/AppTheme"
            android:translationX="16dp" />

    </RadioGroup>

    <Button
        android:id="@+id/settings_random_format_ok_id"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:text="@string/settings_ok"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_random_format_radio_group_id" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:text="@string/settings_random_format_dialog_title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>