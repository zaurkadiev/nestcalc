<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlack"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/simp_calc_main_container_id"
        tools:context="nestcalc.mrzbox.com.nestcalc.MainActivity"
        tools:layout_editor_absoluteY="25dp">
        <LinearLayout
            android:id="@+id/simp_calc_history_cont_id"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/simp_calc_history_toolbar_id"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:translationZ="2dp"
                android:background="@drawable/history_toolbar_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/toolbar_history_title"/>
            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/simple_calc_records_label_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_gravity="bottom"
                    android:paddingBottom="16dp"
                    android:textColor="@color/colorDivider"
                    android:text="@string/no_records"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/simple_calc_records_list_id"
                    android:layout_width="match_parent"
                    app:reverseLayout="true"
                    android:layout_marginTop="-1dp"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <FrameLayout
                android:background="@color/colorBlack"
                android:id="@+id/simple_calc_banner_container"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/simp_calc_display_cont_id"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center_vertical"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simp_calc_history_cont_id">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="70dp">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/simple_calc_result_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:clickable="false"
                        android:maxLines="1"
                        app:minTextSize="32sp"
                        android:gravity="end|center_vertical"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:text="0"
                        android:maxHeight="70dp"
                        android:fontFamily="sans-serif"
                        android:typeface="serif"
                        android:translationZ="0dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="52dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:layout_height="50dp">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/simp_calc_display_exp_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:gravity="end"
                        android:textColorHint="@color/colorBlack"
                        android:fadingEdge="horizontal"
                        android:requiresFadingEdge="horizontal"
                        android:fadingEdgeLength="50dp"
                        android:ellipsize="none"
                        android:singleLine="true"
                        android:textIsSelectable="false"
                        app:minTextSize="28sp"
                        android:maxHeight="50dp"
                        android:fontFamily="sans-serif"
                        android:typeface="serif"
                        android:textSize="32dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:translationZ="1dp"
                        android:text="2+3+3+(3+5)*3+(3+5)*3+(3+5)*3"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/simp_calc_dash_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simp_calc_display_cont_id">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="NestedWeights">
                <RelativeLayout
                    android:id="@+id/simple_calc_sqrt_id"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    tools:ignore="NestedWeights">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorGreyDark"
                        android:gravity="center"
                        android:text="√"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp"
                        tools:ignore="NestedWeights" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_7_butt_id"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="24sp"
                        android:background="@color/colorWhite"
                        tools:ignore="NestedWeights" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_4_butt_id"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="24sp"
                        tools:ignore="NestedWeights" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_1_butt_id"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="24sp"
                        tools:ignore="NestedWeights" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_dot_butt_id"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="."
                        android:tag="label"
                        android:background="@color/colorWhite"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="24sp"
                        tools:ignore="NestedWeights" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_backspace_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorRed">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="1dp"
                        android:gravity="center"
                        android:src="@drawable/ic_backspace_white_48dp"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_marginEnd="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/simple_calc_start_bracket_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="("
                            android:background="@color/colorGreyDark"
                            android:textColor="@color/colorWhite"
                            android:textSize="24sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/simple_calc_end_bracket_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorGreyDark"
                            android:gravity="center"
                            android:text=")"
                            android:textColor="@color/colorWhite"
                            android:textSize="23sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/simple_calc_8_butt_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="24sp"
                            android:background="@color/colorWhite"
                            tools:ignore="NestedWeights" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/simple_calc_9_butt_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground">
                        <TextView
                            android:background="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="24sp"
                            tools:ignore="NestedWeights" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/simple_calc_5_butt_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="24sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/simple_calc_6_butt_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:layout_marginStart="1dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="6"
                            android:background="@color/colorWhite"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="24sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/simple_calc_2_butt_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:layout_marginStart="1dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="2"
                            android:background="@color/colorWhite"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="24sp"
                            tools:ignore="NestedWeights" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/simple_calc_3_butt_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="24sp"
                            tools:ignore="NestedWeights" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/simple_calc_0_butt_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0"
                            android:background="@color/colorWhite"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="24sp"
                            tools:ignore="NestedWeights" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/simple_calc_percent_butt_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground">
                        <TextView
                            android:background="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="%"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="24sp"
                            tools:ignore="NestedWeights" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/simple_calc_equal_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:background="?selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorOrange"
                            android:gravity="center"
                            android:text="="
                            android:textColor="@color/colorWhite"
                            android:textSize="36sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="NestedWeights">
                <RelativeLayout
                    android:id="@+id/simple_calc_mr_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorGreyDark"
                        android:gravity="center"
                        android:tag="label"
                        android:text="MR"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        tools:ignore="NestedWeights" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_div_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="?selectableItemBackgroundBorderless"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="÷"
                        android:textColor="@color/colorWhite"
                        android:textSize="36sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_mult_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="?selectableItemBackgroundBorderless"
                    tools:ignore="NestedWeights">
                    <TextView
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="×"
                        android:textColor="@color/colorWhite"
                        android:textSize="36sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/simple_calc_minus_id"
                    android:background="?selectableItemBackgroundBorderless"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="–"
                        android:textColor="@color/colorWhite"
                        android:textSize="36sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_sum_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:background="?selectableItemBackgroundBorderless"
                    tools:ignore="NestedWeights">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/colorWhite"
                        android:textSize="36sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/simple_calc_kostyl_id"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
