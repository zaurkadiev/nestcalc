<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context="nestcalc.mymorce.com.SettingsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/settings_container_id"
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_toolbar_id"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorToolabar"
            android:translationZ="2dp"
            app:contentInsetLeft="4dp"
            app:contentInsetStart="2dp">

            <ImageView
                android:id="@+id/settings_toolbar_back_id"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="18dp"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back_white_48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/settings_settings_title"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:translationZ="1dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:shadowColor="@color/colorDivider"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="@string/settings_general"
                        android:textColor="@color/colorStatusBar"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/settings_mr_button_copies"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingEnd="16dp"
                            android:text="@string/settings_mr_button_action_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <TextView
                            android:text="..."
                            android:textSize="14sp"
                            android:tag="label"
                            android:textColor="@color/colorStatusBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/settings_history_size_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingEnd="16dp"
                            android:text="@string/settings_history_size_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <TextView
                            android:clickable="false"
                            android:text="..."
                            android:tag="label"
                            android:textSize="14sp"
                            android:textColor="@color/colorStatusBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/settings_save_expression_when_rotate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:tag="lebal"
                            android:text="@string/settings_save_expression_when_rotate_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <Switch
                            android:clickable="false"
                            android:tag="switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:translationZ="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:layout_editor_absoluteX="16dp"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:shadowColor="@color/colorDivider"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="@string/settings_display"
                        android:textColor="@color/colorStatusBar"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/settings_random_format_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingEnd="16dp"
                            android:text="@string/settings_random_format_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <TextView
                            android:text="..."
                            android:textSize="14sp"
                            android:tag="label"
                            android:textColor="@color/colorStatusBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />
                    <FrameLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/settings_date_in_history_items_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:text="@string/settings_date_in_history_items_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <Switch
                            android:clickable="false"
                            android:layout_gravity="right|center_vertical"
                            android:tag="switch"
                            android:layout_marginEnd="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/settings_date_format_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingEnd="16dp"
                            android:text="@string/settings_date_format_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <TextView
                            android:text="..."
                            android:textColor="@color/colorStatusBar"
                            android:textSize="14sp"
                            android:tag="label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/settings_decimal_separator_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingEnd="16dp"
                            android:text="@string/settings_decimal_separator_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <TextView
                            android:text="..."
                            android:textColor="@color/colorStatusBar"
                            android:textSize="14sp"
                            android:tag="label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />
                    <LinearLayout
                        android:background="?selectableItemBackground"
                        android:id="@+id/settings_group_separator_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingEnd="16dp"
                            android:text="@string/settings_group_separator_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />
                        <TextView
                            android:text="..."
                            android:textColor="@color/colorStatusBar"
                            android:textSize="14sp"
                            android:tag="label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:translationZ="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
                    tools:layout_editor_absoluteX="16dp"
                    tools:ignore="MissingConstraints">
                    <!--<TextView-->
                        <!--android:id="@+id/settings_about_id"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:background="?selectableItemBackground"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:paddingEnd="16dp"-->
                        <!--android:paddingStart="16dp"-->
                        <!--android:text="@string/settings_about_title"-->
                        <!--android:textColor="@color/colorBlack"-->
                        <!--android:textSize="14sp" />-->
                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="0.5dp"-->
                        <!--android:background="@color/colorDivider"-->
                        <!--tools:ignore="Suspicious0dp" />-->
                    <TextView
                        android:id="@+id/settings_send_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:text="@string/settings_email_to_devs_title"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />
                    <TextView
                        android:id="@+id/settings_rate_an_app_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:text="@string/settings_rate_an_app_title"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />
                    <TextView
                        android:id="@+id/settings_set_to_defaults_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:text="@string/settings_set_to_defaults_title"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings_version_id"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" >
                    <ImageView
                        android:tag="image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_logo_grey_48dp"/>
                    <TextView
                        android:tag="label"
                        android:text="@string/app_version"
                        android:textColor="@color/colorDivider"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
