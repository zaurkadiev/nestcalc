<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/record_container_id"
    android:layout_height="60dp">
    <RelativeLayout
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        tools:ignore="Suspicious0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">
            <TextView
                android:id="@+id/record_result_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="7813"
                android:isScrollContainer="true"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/record_expression_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:isScrollContainer="true"
                android:singleLine="true"
                android:text="2+6+9+(9+3)*6"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
           android:layout_width="wrap_content"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/record_title_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:ellipsize="end"
               android:gravity="end"
               android:singleLine="true"
               android:layout_marginStart="16dp"
               android:isScrollContainer="true"
               android:layout_marginEnd="16dp"
               android:textColor="@color/colorGreyDark"
               android:textSize="12sp"
               android:visibility="gone"
               android:textStyle="italic" />
           <TextView
               android:id="@+id/record_date_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:ellipsize="end"
               android:gravity="end"
               android:layout_marginStart="16dp"
               android:layout_marginEnd="16dp"
               android:isScrollContainer="true"
               android:text="..."
               android:textColor="@color/colorGreyDark"
               android:textSize="12sp"
               android:textStyle="italic" />
        </LinearLayout>
        <ImageView
            android:id="@+id/record_favorite_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:isScrollContainer="true"
            android:layout_marginEnd="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_star_empty_48dp" />
    </LinearLayout>
</LinearLayout>